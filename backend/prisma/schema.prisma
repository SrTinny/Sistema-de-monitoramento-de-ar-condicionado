generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AirConditioner {
  id             String     @id @default(cuid())
  deviceId       String     @unique
  name           String
  room           String
  status         String     @default("offline")
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  humidity       Float?
  pendingCommand String?
  temperature    Float?
  setpoint       Float?     @default(22)
  lastHeartbeat  DateTime?
  schedules      Schedule[]
}

model Schedule {
  id               String         @id @default(cuid())
  scheduledAt      DateTime?      // Nulo se for recorrente
  action           ScheduleAction
  status           ScheduleStatus @default(PENDENTE)
  createdAt        DateTime       @default(now())
  airConditionerId String
  airConditioner   AirConditioner @relation(fields: [airConditionerId], references: [id], onDelete: Cascade)
  
  // Novos campos para recorrÃªncia
  isRecurring      Boolean        @default(false)
  recurringTime    String?        // HH:mm formato (ex: "14:30")
}

enum Role {
  USER
  ADMIN
}

enum ScheduleAction {
  LIGAR
  DESLIGAR
}

enum ScheduleStatus {
  PENDENTE
  EXECUTADO
  CANCELADO
}
